<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10"><h4>{{test.text}}</h4></div>
</div>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-6"><div {{bind-attr id=test.id}} class="editor">{{test.input}}</div></div>
  <div class="col-md-4"><div><button {{action doTest}} class="btn btn-primary">Go!</button>&nbsp;<button {{action reset}} class="btn btn-danger">Reset</button>&nbsp;Status: {{#if test.isSuccessful}} <span class="glyphicon glyphicon-ok"></span> {{else}} <span class="glyphicon glyphicon-remove"></span>  {{/if}}</div><div><strong>Output:</strong> {{test.lastOutput}}</div>{{#if test.isSuccessful}}<h4>{{test.successMessage}}</h4>{{/if}}</div>
</div>
